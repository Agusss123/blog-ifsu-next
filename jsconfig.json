{
    "compilerOptions": {
        "jsx": "preserve",
        "baseUrl": ".",
        "paths": {
            "@/components/*": [
                "./src/components/*"
            ],
            "@/pages/*": [
                "./src/pages/*"
            ],
            "@/public/*": [
                "./src/public/*"
            ],
            "@/style/*": [
                "./src/public/style/*"
            ],
            "@/hooks/*": [
                "./src/hooks/*"
            ],
            "@services/*": [
                "./src/services/*"
            ],
            "@utils/*": [
                "./src/utils/*"
            ],
        }
    },
    "exclude": [
        "dist",
        ".next",
        "out",
        "node_modules",
        "next.config.js",
        "coverage"
    ],
    "include": [
        "**/*.js"
    ]
}